{
  "env":{
    "browser":false,
    "es6":true,
    "node":true,
    "mocha": true
  },
  "extends":[
    "eslint:recommended"
  ],
  "rules":{
    "array-bracket-spacing":[
      1,
      "always"
    ],
    "comma-dangle":[
      1,
      "never"
    ],
    "eqeqeq":[
      2,
      "smart"
    ],
    "no-unused-vars":0,
    "object-curly-spacing":[
      1,
      "always"
    ],
    "quotes":[
      1,
      "single",
      "avoid-escape"
    ],
    "semi":[
      1,
      "never"
    ],
    "space-before-blocks":[
      1,
      "always"
    ]
  }
}